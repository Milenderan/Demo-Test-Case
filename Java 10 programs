Scanner scanner = new Scanner(System.in);
	int m = scanner.nextInt();
	boolean prime = true;
		
	for(int i=2; i<m; i++) {
		
		if(m%i==0) {
			 	prime = false;
			 	break;
		}
	}
	System.out.println(prime);
	
